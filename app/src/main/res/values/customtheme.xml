<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.Dialog.Alert">
        <!-- Góc bo tròn cho dialog -->
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearance</item>

        <!-- Màu nền của dialog -->
        <item name="colorSurface">@color/white</item>

        <!-- Màu của text trong dialog -->
        <item name="android:textColorPrimary">@color/black</item>

        <!-- Màu chữ của button -->
        <item name="colorPrimary" tools:targetApi="s">@android:color/system_accent1_500</item>

        <!-- Màu chữ của title -->
        <item name="android:textColor">@color/black</item>

        <!-- Các thiết lập cho button -->
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="CustomShapeAppearance" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@android:color/darker_gray</item>
        <item name="boxStrokeWidth">1dp</item>
        <!-- Các thuộc tính khác nếu cần -->
    </style>

    <style name="CustomButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">#007BFF</item>
        <item name="cornerRadius">30dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomButtonStroke" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">#00007BFF</item>
        <item name="cornerRadius">30dp</item>
        <item name="strokeColor">@android:color/darker_gray</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomButtonLight" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">#FFFF</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:padding">8dp</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="ButtonGray" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/light_gray</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="ButtonRed" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/red</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>