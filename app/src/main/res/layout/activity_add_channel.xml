<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.view.activity.messenger.AddChannelActivity">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:backgroundTint="@color/white"
            android:src="@drawable/baseline_keyboard_arrow_left_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txtNameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/tittle_add_channel"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btnBack"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/baseline_search_24"
            android:hint="@string/search"
            android:padding="10dp" />

        <TextView
            android:id="@+id/txtSuggest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtSearch"
            android:layout_margin="10dp"
            android:text="@string/suggest"
            android:textSize="20sp"
            android:textStyle="bold" />

        <io.getstream.chat.android.ui.feature.channels.list.ChannelListView
            android:id="@+id/listViewAddChannel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/txtSuggest"
            android:padding="5dp" />

    </RelativeLayout>
</layout>